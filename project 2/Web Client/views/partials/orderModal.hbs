<div id="bookOrderModel" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title">Complete your order: </h3>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Full Name:</label>
                    <input type="text" class="form-control" id="client-name" required="required">
                </div>
                <div class="form-group">
                    <label>Address:</label>
                    <input type="text" class="form-control" id="client-address" required="required">
                </div>
                <div class="form-group">
                    <label>Mail:</label>
                    <input type="email" class="form-control" id="client-mail" required="required">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Order</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>