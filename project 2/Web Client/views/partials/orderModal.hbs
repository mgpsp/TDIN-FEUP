<div id="bookOrderModel" class="modal fade" id-book={{bookId}}>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title" id="book_Title" value={{bookTitle}}>Complete your order for : </h3>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Full Name:</label>
                        <input type="text" class="form-control" id="client_name" name="client_name" value=""
                               required="required">
                    </div>
                    <div class="form-group">
                        <label>Address:</label>
                        <input type="text" class="form-control" id="client_address" name="client_address" value=""
                               required="required">
                    </div>
                    <div class="form-group">
                        <label>Mail:</label>
                        <input type="email" class="form-control" id="client_mail" name="client_mail" value=""
                               required="required">
                    </div>
                    <div class="form-group">
                        <label id="book_Price" value={{bookPrice}}>Price: {{bookPrice}} â‚¬</label>
                    </div>
                    <div id="bookHasStock" value={{bookHasStock}}>
                        <p class="" id="book_Stock" value={{bookStock}}><i
                                class="fa fa-check fa-fw" aria-hidden="true"></i> Stock</p>
                    </div>
                    <div class="input-group spinner">
                        <input type="text" class="form-control" id="book_Quantity" value={{bookQuantity}} min="0">
                        <div class="input-group-btn-vertical">
                            <button id="upQuantity" class="btn btn-default" type="button"><i class="fa fa-caret-up"></i>
                            </button>
                            <button id="downQuantity" class="btn btn-default" type="button"><i
                                    class="fa fa-caret-down"></i></button>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <input id="orderRequest" class="btn btn-primary" type="submit" value="Order">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>